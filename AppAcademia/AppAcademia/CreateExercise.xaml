<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAcademia.CreateExercise"
             Title="CreateExercise">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">
            
            <!-- Título -->
            <Label Text="Novo Exercício"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}"
                   Margin="0,10,0,20"/>

            <!-- Card do Formulário -->
            <Frame BorderColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                <VerticalStackLayout Spacing="18">

                    <!-- Tipo de Exercício -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Tipo de Exercício"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#0D47A1, Dark=#90CAF9}"/>
                        <Entry x:Name="ExerciseTypeEntry"
                               Placeholder="Ex: Supino, Agachamento, Flexão..."
                               PlaceholderColor="{AppThemeBinding Light=#90CAF9, Dark=#90CAF9}"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#212121, Dark=#E0E0E0}"
                               BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0F172A}"/>
                    </VerticalStackLayout>

                    <!-- Grid para Repetições e Carga -->
                    <Grid ColumnDefinitions="*, *"
                          ColumnSpacing="15">
                        
                        <!-- Repetições -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Repetições"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#0D47A1, Dark=#90CAF9}"/>
                            <Entry x:Name="RepetitionsEntry"
                                   Placeholder="0"
                                   Keyboard="Numeric"
                                   PlaceholderColor="{AppThemeBinding Light=#90CAF9, Dark=#90CAF9}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#212121, Dark=#E0E0E0}"
                                   BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0F172A}"/>
                        </VerticalStackLayout>

                        <!-- Carga -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="Carga (kg)"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#0D47A1, Dark=#90CAF9}"/>
                            <Entry x:Name="LoadEntry"
                                   Placeholder="0.0"
                                   Keyboard="Numeric"
                                   PlaceholderColor="{AppThemeBinding Light=#90CAF9, Dark=#90CAF9}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#212121, Dark=#E0E0E0}"
                                   BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0F172A}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Foto do Equipamento -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Foto do Equipamento (caminho)"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#0D47A1, Dark=#90CAF9}"/>
                        <Entry x:Name="EquipmentPhotoEntry"
                               Placeholder="Opcional: caminho da foto..."
                               PlaceholderColor="{AppThemeBinding Light=#90CAF9, Dark=#90CAF9}"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#212121, Dark=#E0E0E0}"
                               BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0F172A}"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Botões de Ação -->
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="15"
                  Margin="0,10,0,20">
                
                <!-- Botão Cancelar -->
              <Button Grid.Column="0"
                        Text="Cancelar"
                        FontSize="17"
                        FontAttributes="Bold"
                     BackgroundColor="{AppThemeBinding Light=#757575, Dark=#9E9E9E}"
                     TextColor="{AppThemeBinding Light=White, Dark=Black}"
                        CornerRadius="10"
                        HeightRequest="55"
                        Clicked="OnCancelClicked"/>

                <!-- Botão Salvar -->
              <Button Grid.Column="1"
                        Text="Salvar"
                        FontSize="17"
                        FontAttributes="Bold"
                     BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                     TextColor="{AppThemeBinding Light=White, Dark=Black}"
                        CornerRadius="10"
                        HeightRequest="55"
                        Clicked="OnSaveClicked"/>
            </Grid>

            <!-- Mensagem de Feedback -->
            <Label x:Name="FeedbackLabel"
                   IsVisible="False"
                   FontSize="15"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Padding="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>