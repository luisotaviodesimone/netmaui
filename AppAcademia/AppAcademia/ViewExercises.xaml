             <Frame BackgroundColor="{StaticResource Magenta}"
                   Padding="20"
                   Margin="0,0,0,5"
                   CornerRadius="12"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="12">
                    <Label Text="ðŸ“Š"
