                                <!-- Box de InformaÃ§Ãµes Principais -->
                    <Frame BackgroundColor="{StaticResource Gray100}"
                                       Padding="12"
                                       CornerRadius="8"
                                       HasShadow="False"
                        BorderColor="{StaticResource Gray300}">
                                    <Grid ColumnDefinitions="*, *"
                                          RowDefinitions="Auto, Auto"
                                          ColumnSpacing="10"
                                          RowSpacing="8">
                                        
                                        <!-- RepetiÃ§Ãµes -->
