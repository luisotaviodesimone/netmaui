                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding EquipmentPhotoPath}"
                                                     Value="">
                                            <Setter Property="IsVisible"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>