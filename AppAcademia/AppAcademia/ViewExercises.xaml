                              TextColor="{StaticResource MidnightBlue}"/>
                                        </VerticalStackLayout>

                                        <!-- Carga -->
                                        <VerticalStackLayout Grid.Column="1" Grid.Row="0">
                          <Label Text="Carga"
                                                   FontSize="12"
                              TextColor="{StaticResource Gray600}"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Load, StringFormat='{0:F1} kg'}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                              TextColor="{StaticResource MidnightBlue}"/>
                                        </VerticalStackLayout>

                                        <!-- Data -->
                                        <VerticalStackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                          <Label Text="Data e Hora"
                                                   FontSize="12"
                              TextColor="{StaticResource Gray600}"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
