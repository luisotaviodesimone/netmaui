                                        </VerticalStackLayout>
                                    </Grid>
                                </Frame>

                                <!-- Caminho da Foto -->
                    <Label FontSize="13"
                        TextColor="{StaticResource Gray500}"
                                       Padding="5,0">
                                    <Label.FormattedText>
